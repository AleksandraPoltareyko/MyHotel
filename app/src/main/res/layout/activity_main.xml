<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF6F9"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FBF6F9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded12"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="10sp"
            >



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/images"
        android:background="@drawable/rounded"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded">

            <androidx.recyclerview.widget.RecyclerView
                android:fitsSystemWindows="true"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"

                />

            <!-- android:layout_marginTop="24dp"-->

            <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                android:id="@+id/indicator"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pager"
                app:spi_dotColor="#000000"
                />

        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#20FFC700"
    android:background="@drawable/rounded5"
    android:orientation="horizontal"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_baseline_star_24"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:textSize="16dp"
        android:textColor="@color/ratingcolor"/>

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adress"
        android:autoLink="web"
        android:textColor="#0D72FF"
        android:textSize="14dp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:textColor="@color/black"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_for_it"
            android:textSize="16dp"
            />


    </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded12"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10sp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Об отеле"
        android:textSize="30dp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp">

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/buttons"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="10sp">

        </LinearLayout>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:fitsSystemWindows="true"-->
<!--        android:id="@+id/pager_butoon"-->
<!--        android:nestedScrollingEnabled="false"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->

<!--        />-->
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#0D72FF"
                android:onClick="openRooms"
                android:text="К выбору номера"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:padding="10dp"
                 />

        </LinearLayout>


    </LinearLayout>





</ScrollView>